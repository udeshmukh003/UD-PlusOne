<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:annotation-config/>
	
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"></bean>
	
	<bean id="a" class="com.mode.Address">
	<property name="lAdd" value="lll"></property>
	<property name="pAdd" value="ppp"></property>
	</bean>
	
	<bean id="b"  class="com.mode.Address">
	<property name="lAdd" value="l2"></property>
	<property name="pAdd" value="p2"></property>
	</bean>
	
	
	<bean id="s" class="com.mode.Student">
	<property name="name" value="umesh"></property>
	</bean>
	
	</beans>